<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:contentDescription="@string/play_image_descriptor"
        android:id="@+id/play_button_image"
        android:src="@drawable/ic_play_arrow_white_18dp"
        android:padding="@dimen/super_large_text_view_padding"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="@dimen/nothing"
        android:layout_height="wrap_content"
        android:id="@+id/trailer_text"
        android:textStyle="bold"
        android:layout_gravity="start|center"
        android:layout_weight="6" />
</LinearLayout>